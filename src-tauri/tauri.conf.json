{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "scryer",
  "version": "0.1.3",
  "identifier": "com.prohobo.scryer",
  "build": {
    "beforeDevCommand": "cargo run -p xtask -- build-sidecar --debug && pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "cargo run -p xtask -- build-sidecar && pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "scryer",
        "width": 800,
        "height": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["binaries/scryer-mcp"],
    "resources": {
      "templates/*": "templates/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
